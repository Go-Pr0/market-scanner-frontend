# Market Scanner Frontend Configuration
# Copy this file to .env and configure the values for your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API Base URL
# For local development
REACT_APP_API_BASE_URL=http://localhost:8000

# For production (replace with your actual API URL)
# REACT_APP_API_BASE_URL=https://api.yourdomain.com

# For staging environment
# REACT_APP_API_BASE_URL=https://staging-api.yourdomain.com

# =============================================================================
# JWT AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT tokens are handled automatically by the authentication system
# No manual token configuration needed - tokens are managed in localStorage

# Token storage key in localStorage (optional, defaults to 'market-scanner-auth')
REACT_APP_TOKEN_STORAGE_KEY=market-scanner-auth

# Auto logout when token expires (optional, defaults to true)
REACT_APP_AUTO_LOGOUT_ON_TOKEN_EXPIRE=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name and version
REACT_APP_APP_NAME=Market Scanner
REACT_APP_VERSION=1.0.0

# Application environment
REACT_APP_ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable user registration (set to false to disable registration)
REACT_APP_ENABLE_REGISTRATION=true

# Enable email whitelist checking during registration
REACT_APP_ENABLE_EMAIL_WHITELIST_CHECK=true

# Enable profile management features
REACT_APP_ENABLE_PROFILE_MANAGEMENT=true

# Enable password change functionality
REACT_APP_ENABLE_PASSWORD_CHANGE=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Default theme (light/dark/auto)
REACT_APP_DEFAULT_THEME=dark

# Enable animations and transitions
REACT_APP_ENABLE_ANIMATIONS=true

# Default page size for paginated data
REACT_APP_DEFAULT_PAGE_SIZE=50

# Chat message limit for AI assistant
REACT_APP_CHAT_MESSAGE_LIMIT=100

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Bias Tracker URL (external link in navigation)
REACT_APP_BIAS_TRACKER_URL=https://morning-tracker.vercel.app

# TrendSpider integration (if applicable)
# REACT_APP_TRENDSPIDER_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Generate source maps (set to false for production builds)
GENERATE_SOURCEMAP=true

# Disable ESLint plugin during build (optional)
# DISABLE_ESLINT_PLUGIN=true

# Enable React strict mode
REACT_APP_STRICT_MODE=true

# Enable development tools
REACT_APP_ENABLE_DEV_TOOLS=true

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics tracking ID (optional)
# REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Enable error boundary reporting
REACT_APP_ENABLE_ERROR_REPORTING=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# API request timeout in milliseconds
REACT_APP_API_TIMEOUT=30000

# Enable service worker for caching (production only)
REACT_APP_ENABLE_SERVICE_WORKER=false

# Enable lazy loading for components
REACT_APP_ENABLE_LAZY_LOADING=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Content Security Policy (CSP) settings
# REACT_APP_CSP_ENABLED=true

# Enable HTTPS redirect in production
# REACT_APP_FORCE_HTTPS=true

# Session timeout warning (minutes before token expires)
REACT_APP_SESSION_WARNING_MINUTES=5

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language
REACT_APP_DEFAULT_LANGUAGE=en

# Available languages (comma-separated)
REACT_APP_AVAILABLE_LANGUAGES=en

# =============================================================================
# MARKET DATA CONFIGURATION
# =============================================================================

# Default market data refresh interval (seconds)
REACT_APP_MARKET_DATA_REFRESH_INTERVAL=60

# Default FDV threshold for scanning
REACT_APP_DEFAULT_FDV_THRESHOLD=85

# Maximum number of symbols to display
REACT_APP_MAX_SYMBOLS_DISPLAY=500

# =============================================================================
# CHAT SYSTEM CONFIGURATION
# =============================================================================

# Maximum chat history to load
REACT_APP_MAX_CHAT_HISTORY=50

# Auto-save chat drafts
REACT_APP_AUTO_SAVE_CHAT_DRAFTS=true

# Chat message character limit
REACT_APP_CHAT_MESSAGE_MAX_LENGTH=2000

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build output directory
# BUILD_PATH=build

# Public URL for assets (useful for CDN deployment)
# PUBLIC_URL=https://cdn.yourdomain.com

# Homepage URL (for routing in subdirectories)
# HOMEPAGE=/market-scanner

# =============================================================================
# EXAMPLE PRODUCTION CONFIGURATION
# =============================================================================

# For production deployment, you would typically set:
# REACT_APP_API_BASE_URL=https://api.yourdomain.com
# REACT_APP_ENVIRONMENT=production
# REACT_APP_ENABLE_DEV_TOOLS=false
# GENERATE_SOURCEMAP=false
# REACT_APP_ENABLE_SERVICE_WORKER=true
# REACT_APP_FORCE_HTTPS=true

# =============================================================================
# NOTES
# =============================================================================

# 1. All REACT_APP_* variables are embedded into the build and accessible in the browser
# 2. Never put sensitive information (API keys, secrets) in REACT_APP_* variables
# 3. Variables without REACT_APP_ prefix are only available during build time
# 4. Boolean values should be strings: "true" or "false"
# 5. Restart the development server after changing environment variables
# 6. Use .env.local for local overrides that shouldn't be committed to git